@model UCDASearches.WebMVC.Controllers.LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Login - UCDASearches</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            /* Gradient background like Nextcloud */
            background: linear-gradient(180deg, #0277bd 0%, #039be5 50%, #01579b 100%);
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: Arial, sans-serif;
        }

        .login-card {
            width: 100%;
            max-width: 360px;
            background: rgba(255, 255, 255, 0.95);
            border-radius: 8px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.25);
            padding: 2rem;
        }

            .login-card h4 {
                font-weight: 600;
                text-align: center;
                margin-bottom: 1.5rem;
                color: #333;
            }

        .btn-login {
            background-color: #0277bd;
            color: #fff;
            font-weight: 600;
        }

            .btn-login:hover {
                background-color: #01579b;
                color: #fff;
            }

        .small-links {
            font-size: 0.9rem;
            text-align: center;
            margin-top: 1rem;
        }
    </style>
</head>
<body>
    <div class="login-card">
        <h4>Log in to UCDASearches</h4>
        <form method="post" asp-controller="Account" asp-action="Login">
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <input type="text" class="form-control" name="email" placeholder="Account name or email" required />
            </div>
            <div class="mb-3">
                <input type="password" class="form-control" name="password" placeholder="Password" required />
            </div>

            <button type="submit" class="btn btn-login w-100 mb-3">Log in</button>

            <div class="small-links">
                <a href="#">Forgot password?</a> <br />
                <a href="#">Log in with a device</a>
            </div>
        </form>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

